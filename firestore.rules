rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isMaster() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'master';
    }

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if request.auth.uid == userId && 
                       (request.resource.data.email == 'eduardo.campos@lhamascred.com.br' ? request.resource.data.role == 'master' : request.resource.data.role == 'user');
      allow update: if isOwner(userId) && request.resource.data.keys().hasOnly(['displayName']);
      allow delete: if false;

      match /bankChecklists/{checklistId} {
        allow read, write: if isOwner(userId);
      }
      
      match /bankAccessDetails/{accessId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /promotoras/{promotoraId} {
      allow read: if request.auth != null;
      allow write: if isMaster();
    }
    
    match /bankStatuses/{bankStatusId} {
      allow read: if request.auth != null;
      allow write: if isMaster();

      match /cltRules/{ruleId} {
        allow read: if request.auth != null;
        allow write: if isMaster();
      }
    }

    match /activityLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow write: if false;
    }
  }
