rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read, create, and update their own profile data.
      allow read, create, update: if isOwner(userId);
      // Deleting user profiles is not allowed via these rules.
      allow delete: if false;

      // Rules for the 'bankStatuses' subcollection
      match /bankStatuses/{bankStatusId} {
        // The user can perform all operations (create, read, update, delete) on their own bank statuses.
        allow read, write: if isOwner(userId);
      }
    }
  }
}
